<!DOCTYPE html>

<html>
  <head>
    <title>MentalBuilder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
    
      <div class="title">
        <%=  link_to 'MentalBuilder' , home_menu_path, :class => "headertext" %>
        <p class="header-title-span">~3ステップでメンタルを強くするWebアプリ~</p>
        <%= link_to 'マイページ', home_menu_path, :class => "headertext-mypage" %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, :class => "headertext-logout" %>
      </div>

      <ul class="header-dropmenu">
        <li>
          <%= link_to '記録する', home_menu_record_path, :class => "list" %>
          <ul>
            <li><%= link_to 'thermometer', thermometers_new_path, :class => "list" %></li>
            <li><%= link_to 'PSS4', tests_pssfours_new_path, :class => "list" %></li>
            <li><%= link_to '雑談', new_zatsudan_path, :class => "list" %></li>
          </ul>
        </li>
        <li>
          <%= link_to '振り返る', home_menu_reflection_path, :class => "list" %>
          <ul>
            <li><%= link_to 'thermometer', thermometers_show_path, :class => "list" %></li>
            <li><%= link_to 'PSS4', tests_pssfours_path, :class => "list" %></li>
            <li><%= link_to '雑談', zatsudans_path, :class => "list" %></li>
          </ul>
        </li>
        <li>
          <%= link_to '強くなる', home_menu_arm_path, :class => "list" %>
          <ul>
            <li><%= link_to '武器一覧', home_menu_weapon_path, :class => "list" %></li>
            <li><%= link_to 'if・thenプランニングで武装する', ifthens_new_path, :class => "list" %></li>
          </ul>
        </li>
      </ul>

    </header>

    <%= yield %>


  </body>

</html>