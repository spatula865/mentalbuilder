
<% if user_signed_in? %>

    <h1 class="ifthen-new-title">if・thenプランニングで武装する</h1>

    <div class="ifthen-new-input">
        <%= form_for @ifthen do |f| %>
            <%= f.label :もし・いつ %>
            <br>
            <%= f.text_area :ifthen ,id:"ifthen" %>
            <br>
            <br>
            <%= f.label :どうする %>
            <br>
            <%= f.text_area :todo ,id:"todo"%>
            <br>
            <br>
            <%= f.submit "送信" %>
        <% end %>

        <br><%= link_to 'これまでの推移を見る', :controller => "ifthens", :action => "index" %>

    </div>

<% else %>
    
<div class="pleaselogin-container">
    <p class="pleaselogin">ログインユーザーのみ利用できます。</p>
    <div class="pleaselogin-button">
        <%= button_to "ログイン", new_user_session_path, method: :get, :class => "hello-index-login" %>
        <%= button_to "新規登録", new_user_registration_path, method: :get, :class=>"hello-index-sinki"  %>
    </div>
</div>

<% end %>

<style>

    .ifthen-new-title{
        text-align: center;
    }
</style>