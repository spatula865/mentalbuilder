  <h1 class="users-registration-edit-title">Edit <%= resource_name.to_s.humanize %></h1>

  <div class="users-registration-edit-container">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
    
      <div class="users-registration-edit-container-1">
        <!--アカウント編集時に名前を入力できるようにフォームを追加-->
        <div class="field-name">
          <%= f.label :ユーザー名 %><br />
          <%= f.text_area :name, autofocus: true, autocomplete: "name", :class => "formofname" %>
        </div>

        <!--アカウント編集時にプロフィールを入力できるようにフォームを追加-->
        <div class="field">
          <%= f.label :プロフィール %><br />
          <%= f.text_area :profile, autofocus: true %>
        </div>
      </div>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :パスワード %> <i>（パスワードを変更しない場合は記入しないでください）</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>最低<%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :確認用パスワード %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :現在のパスワード %> <i>（パスワードを変更しない場合にも記入してください）</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "更新する" %>
      </div>
    <% end %>

    <h3>アカウントを削除する</h3>

    <p><%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", user_path(current_user.id) %>

  </div>

<style>
  .users-registration-edit-title{
    text-align: center;
  }
  .users-registration-edit-container{
    width: 50%;
    margin: 0 auto;
  }
  .field-name{
  }

  .formofname{
    height: 16px;

  }
</style>
