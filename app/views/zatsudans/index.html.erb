<body>

    <div>
        <div class="graph">
            <%= column_chart Zatsudan.pluck(:created_at, :hajimekata1) %>
        </div>

        <h3 class="koremade-pss4">これまでの記録</h3>

        <% @zatsudan.each do |t| %>
        <div class="container-pss4">
            <div class="main-box2">
                <div class="container-pss4-1"><%= [t.hajimekata1, t.hajimekata2, t.hajimekata3, t.hajimekata4, t.hajimekata5, t.hajimekata6].sum %></div>
            </div>
            <div class="sub-box2">
                <%= button_to "削除", tests_pssfours_path(t.id), method: :delete, data: { confirm: '削除しますか？' } %>
                <p class="time-pss4"><%= t.created_at.strftime("%Y-%m-%d %H:%M") %></p>
            </div>  
        </div>
        <br>
    <% end %>

    </div>

</body>