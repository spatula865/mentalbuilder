<html>

    <div class="weapon-new-form">    
        <%= form_for @weapon do |f| %>
            <%= f.label :あなたのストレス解消の武器を教えてください %>
            <br>
            <%= f.text_area :body  %>
            <br>
            <div class="field">
            <%= f.file_field :image %>
            <%= f.file_field :image2 %>
            </div>
            <br>
            <% if user_signed_in? %>
                <%= f.submit "送信" %>
            <% end %>
        <% end %>
    </div>

    <% unless user_signed_in? %>
    
        <p class="pleaselogin">ログインユーザーのみ利用できます。</p>
        <div class="pleaselogin-button">
            <%= button_to "ログイン", new_user_session_path, method: :get, :class => "hello-index-login" %>
            <%= button_to "新規登録", new_user_registration_path, method: :get, :class=>"hello-index-sinki"  %>
        </div>

    <% end %>

</html>

<style>
    
    .weapon-new-form{
        width: 60% ;
        margin: 0 auto;
        text-align: center;
        margin-top: 200px;
    }
</style>